{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"include": ["express/**/*", "fastify/**/*", "node-hono/**/*"]
	},
	"formatter": {
		"enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"json": {
    "formatter": {
      "enabled": false
    }
  }
}
